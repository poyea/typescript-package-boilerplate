{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "eofline": 0,
        "quotes": [1, "double"],
        "semi": [1, "always"],
        "no-console": 0,
        "no-var-requires": 0,
        "one-variable-per-declaration": 0
    }
}
